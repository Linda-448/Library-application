<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="/css/bookstyle.css">
    <title>List of Books</title>
</head>
<body>
<div class="content">
<div class="container">

  <div class="column1">
    <h1>List of Books</h1>
    <table class="center">
<tr>    
    <th>Book ID</th>
    <th>Book </th>
    <th>Author </th>
    <th>Price</th>
    <th>Age Group</th>
    <th>Book Type</th>
  </tr>   
        <% books.forEach(function(book) { %>
            
		<tr>
		<td style="text-align: center"><%= book.Book_id %></td> 
		<td style="text-align: center"><%= book.Book_name %></td>
		<td style="text-align: center"><%= book.Author_name %></td>      
		<td style="text-align: center"><%= book.Price %></td> 
		<td style="text-align: center"> <%= book.Age_group %></td> 
		<td style="text-align: center"> <%= book.Book_type %></td> 
        	</tr>            
        <% }); %>
    </table>
 </div>
</div>
 
</div>
<p><a href="/logout">Logout</a></p>
</body>
</html>